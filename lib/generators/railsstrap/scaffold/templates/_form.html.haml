= form_for @<%= resource_name %>, html: { role: "form", class: "form <%= resource_name %>" } do |f|
  <%- attributes.each do |column| -%>
  .form-group
    = f.label :<%= column.name %>, class: 'control-label col-lg-2'
    .col-lg-10
      = f.<%= column.field_type %> :<%= column.name %>, class: 'form-control', required: true
  <%- end -%>
  .form-group
    .col-lg-offset-2.col-lg-10
      = f.submit nil,class: 'btn btn-primary'
      = link_to t('.cancel', default: t("helpers.links.cancel")), <%= controller_name %>_path, class: 'btn btn-primary'
