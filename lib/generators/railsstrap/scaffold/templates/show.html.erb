<%- model_class = resource_name.downcase.gsub('::', '') %>
<%%- model_class = <%= resource_name.classify %> -%>
<div class="page-header">
  <h1><%%=t '.title', default: <%= singular_table_name.titleize %> %></h1>
</div>

<dl class="dl-horizontal">
<%- attributes.each do |column| -%>
  <dt><strong><%%= model_class.human_attribute_name(:<%= column.name %>) %>:</strong></dt>
  <dd><%%= @<%= model_class %>.<%= column.name %> %></dd>
<%- end -%>
</dl>

<%%= link_to t('.back', default: t("helpers.links.back")),
              <%= controller_name %>_path, class: 'btn btn-outline-info'  %>
<%%= link_to t('.edit', default: t("helpers.links.edit")),
              edit_<%= model_class %>_path(@<%= model_class %>), class: 'btn btn-outline-dark' %>
<%%= link_to t('.destroy', default: t("helpers.links.destroy")),
              <%= model_class %>_path(@<%= model_class %>),
              method: 'delete',
              data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) },
              class: 'btn btn-outline-danger' %>
