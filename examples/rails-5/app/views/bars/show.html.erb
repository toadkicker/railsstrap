
<%- model_class = ::Bar -%>
<div class="page-header">
  <h1><%=t '.title', default: Bar %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:widget) %>:</strong></dt>
  <dd><%= @bar.widget %></dd>
  <dt><strong><%= model_class.human_attribute_name(:sprocket) %>:</strong></dt>
  <dd><%= @bar.sprocket %></dd>
  <dt><strong><%= model_class.human_attribute_name(:crank) %>:</strong></dt>
  <dd><%= @bar.crank %></dd>
</dl>

<%= link_to t('.back', default: t("helpers.links.back")),
              bars_path, class: 'btn btn-outline-info'  %>
<%= link_to t('.edit', default: t("helpers.links.edit")),
              edit_bar_path(@bar), class: 'btn btn-outline-dark' %>
<%= link_to t('.destroy', default: t("helpers.links.destroy")),
              bar_path(@bar),
              method: 'delete',
              data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) },
              class: 'btn btn-outline-danger' %>
